<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?polaris_file_item_background_selector"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="32dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/file_name_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?polaris_file_item_name_text_color_selector"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/check_box_view"
        app:layout_constraintStart_toEndOf="@+id/icon_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <CheckBox
        android:id="@+id/check_box_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:button="?polaris_file_item_checkbox_btn_selector"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/file_desc_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textColor="?polaris_file_item_desc_text_color_selector"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/check_box_view"
        app:layout_constraintStart_toEndOf="@+id/icon_view"
        app:layout_constraintTop_toBottomOf="@+id/file_name_view"
        tools:text="12MB" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/file_desc_view" />

</android.support.constraint.ConstraintLayout>